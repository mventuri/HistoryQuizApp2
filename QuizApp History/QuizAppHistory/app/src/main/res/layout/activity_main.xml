        <RadioButton
            android:id="@+id/q7_answer2"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q7_answer2" />

        <RadioButton
            android:id="@+id/q7_answer3"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q7_answer3" />
        </RadioGroup>

        <!--Question 8-->

        <TextView
            android:id="@+id/q8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop"
            android:text="@string/q8"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/question" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/q8_answer1"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q8_answer1" />

        <RadioButton
            android:id="@+id/q8_answer2"
            android:buttonTint="@color/answers"
