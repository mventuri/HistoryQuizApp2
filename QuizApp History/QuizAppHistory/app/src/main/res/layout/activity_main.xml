            android:text="@string/q8_answer3" />
        </RadioGroup>

        <!--Image-->
        <ImageView
            android:layout_marginTop="@dimen/imageMargin"
            android:layout_marginBottom="@dimen/imageMargin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageHeight"
            android:src="@drawable/guernica"
            />

        <!--Question 9-->
        <TextView
            android:id="@+id/q9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop"
            android:text="@string/q9"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/question" />

        <CheckBox
            android:id="@+id/q9_answer1"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q9_answer1" />

        <CheckBox
            android:id="@+id/q9_answer2"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q9_answer2" />

        <CheckBox
            android:id="@+id/q9_answer3"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q9_answer3" />

        <!--Question 10-->

        <TextView
            android:id="@+id/q10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop"
            android:text="@string/q10"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/question" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/q10_answer1"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q10_answer1" />

        <RadioButton
            android:id="@+id/q10_answer2"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q10_answer2" />

        <RadioButton
            android:id="@+id/q10_answer3"
            android:buttonTint="@color/answers"
            android:textColor="@color/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q10_answer3" />
        </RadioGroup>

        <!--Button-->

        <Button
            android:id="@+id/submit_answers"
            android:background="@color/colorPrimary"
            android:textColor="@color/ButtonText"
            android:layout_marginTop="@dimen/paddingTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkAnswers"
            android:text="@string/check_answers" />

    </LinearLayout>
</ScrollView>
